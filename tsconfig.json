{
  "compilerOptions": {
    "importHelpers": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "~*": ["./src/*"]
    },
    "allowJs": true,
    "target": "ES2015",
    "module": "commonjs",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": false,
    "isolatedModules": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "noEmit": false,
    "noLib": false,
    "jsx": "react",
    "sourceMap": false,
    "outDir": "dist",
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "styled",
          "css"
        ]
      }
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "node_modules/date_fns",
    "src/static",
    "__deprecated"
  ]
}
